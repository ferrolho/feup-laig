<anf>
    <globals>
        <drawing mode="fill" shading="flat" background="0.0 0.0 0.2 1.0" />
        <culling face="back" order="ccw" />
        <lighting doublesided="true" local="false" enabled="true" ambient="0.5 0.5 0.7 0.5" />
    </globals>

    <cameras initial="cockpitCamera" >
        <perspective id="cockpitCamera" near="0.1" far="0.2" angle="35.0" pos="0.0 0.0 0.0" target="3.0 2.0 1.0" />
        <ortho id="airportCamera" direction="x" near="0.1" far="0.2" left="-1.0" right="1.0" top="-1.0" bottom="1.0" />
    </cameras>

    <lights>
        <light id="sun" type="omni" enabled="true" marker="true" pos="0 10 0" >
            <component type="ambient" value="0.5 0 0 1" />
            <component type="diffuse" value="0.5 0.5 0.5 1" />
            <component type="specular" value="0.6 0.6 0.6 1" />
        </light>

        <light id="airplaneHeadlight" type="spot" enabled="true" marker="true" pos="0 0 0" target="0 1 0"  
            angle="30.0" exponent="2" >
            <component type="ambient" value="0.5 0 0 1" />
            <component type="diffuse" value="0.6 0.6 0.6 1" />
            <component type="specular" value="0.5 0.5 0.5 1" />
        </light>
    </lights>

    <textures>
          <texture id="asfalt" file="asfalt.png" texlength_s="0.4" texlength_t="0.3" />
    </textures>

    <appearances>
        <!-- IMPORTANTE: -->
        <!--   textureref e opcional, a utilizar caso haja textura associada a esta aparencia -->
        <appearance id="metal" shininess="0.9" textureref="metalText" >
               <component type="ambient" value="0.5 0.4 0.8 1" />
               <component type="diffuse" value="0.1 0.1 0.1 1" />
               <component type="specular" value="0.3 0.1 0.9 1" />
        </appearance>

        <appearance id="leather" shininess="0.4" textureref="cockpitChair" >
               <component type="ambient" value="0.8 0.7 0.3 1" />
               <component type="diffuse" value="0.5 0.8 0.1 1" />
               <component type="specular" value="0.2 0.2 0.6 1" />
        </appearance>

        <appearance id="tires" shininess="0.2" textureref="" >
               <component type="ambient" value="0.5 0.5 0.5 1" />
               <component type="diffuse" value="0.0 0.0 0.0 1" />
               <component type="specular" value="0.2 0.2 0.2 1" />
        </appearance>
    </appearances>

    <!-- bloco do grafo; "rootid" identifica o no de raiz -->
    <graph rootid="ss">
        <!-- tem de existir, pelo menos, um bloco "node" -->
        <node id="ss">g
          <!-- bloco "transforms" obrigatorio -->
            <transforms>
                <!-- deve conter transformacoes explicitas usando as instrucoes seguintes sem limite nem ordem -->
                <!-- ex: bloco transforms pode ficar sem conteudo -->
                <!-- ex: bloco transforms pode ser R,T (nao tem S) -->
                <!-- ex: bloco transforms pode ser R,S,T,S -->
                <transform type="translate" to="10 2.5 4" />
                <transform type="rotate" axis="aaa" angle="220" />
                <transform type="scale" factor="2 2 2" />
            </transforms>
          
            <!-- declaracao da aparencia a utilizar -->
            <!-- se id="inherit", o no' mantem (herda) a aparencia do "pai" -->

            <appearanceref id="ss" />
 
                              
             <!-- conteudo do no; deve existir pelo menos um bloco "primitives" ou um "descendants" -->
             <!-- podem existir ambos -->

             <!-- bloco "primitives" --> 
            <primitives>
                <!-- podem existir varias primitivas -->

                <!-- Primitivas : rectangle, triangle, cylinder, sphere, torus -->
                <!--   Comandos a serem interpretados genericamente como em OpenGL/GLUT, exceto -->
                <!--   o cilindro, que deve adicionalmente ter topos ou tampas) -->            
                <rectangle xy1="ff ff" xy2="ff ff" />
                <triangle xyz1="ff ff ff" xyz2="ff ff ff" xyz3="ff ff ff" />
                <cylinder base="ff" top="ff" height="ff" slices="ii" stacks="ii" />      <!-- deve ter topos -->
                <sphere radius="ff" slices="ii" stacks="ii" />
                <torus inner="ff" outer="ff" slices="ii" loops="ii" />
             </primitives>
               
             <!-- bloco "descendants" -->
            <descendants>
                <!-- Referencia a outros elementos do grafo -->
                <!-- (repetir o no. de vezes necessario) -->
                <!-- LEMBRANDO: qualquer no' pode ser referenciado previamente 'a sua declaracao; isto -->
                <!--            e', a ordem pela qual os nos sao declarados e' irrelevante -->
                <noderef id="ss" />
            </descendants>
        </node>
    </graph>
</anf>
